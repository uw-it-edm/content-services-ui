{
  "extends": [
    ":prHourlyLimit4",
    "schedule:weekly",
    "group:monorepos",
    "group:recommended",
    "helpers:disableTypesNodeMajor"
  ],
  "masterIssue": true,
  "prConcurrentLimit": 4,
  "rangeStrategy": "bump",
