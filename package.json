{
  "name": "content-services-ui",
  "version": "0.89.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test --watch=false --sourcemaps=false",
    "test-cover": "rm -rf ./coverage && ng test --no-watch --code-coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "ng lint --type-check",
    "e2e": "ng e2e",
    "e2e-local": "yarn mock-services && ng e2e --environment=travis ; echo '------------------------\\nstopping mock containers' ; docker stop content-services-api-e2e-mock ; echo '------------------------'",
    "validate": "npm-run-all --parallel test lint",
    "prepush": "npm run validate",
    "precommit": "lint-staged",
    "pretty": "prettier --parser typescript --single-quote --print-width=120 --write",
    "mock-services": "docker build -t content-services-api-e2e-mock ./e2e/mocks && docker run --name content-services-api-e2e-mock --rm -d -p 12345:80 -v ${PWD}/e2e/mocks:/usr/share/nginx/html/ content-services-api-e2e-mock"
  },
  "lint-staged": {
    "*.ts": [
      "npm run pretty",
      "npm run lint",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/flex-layout": "^2.0.0-beta.11",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/material": "^5.0.0",
    "@angular/cdk": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/platform-server": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@types/lodash": "^4.14.80",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.4.1",
    "coveralls": "^3.0.0",
    "directory-encoder": "0.9.2",
    "lint-staged": "^6.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.19.2",
    "moment-timezone": "^0.5.14",
    "ng2-pdf-viewer": "3.0.8",
    "pdfjs-dist": "^2.0.244",
    "rxjs": "^5.5.2",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.7.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/language-service": "^5.1.2",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~9.4.0",
    "codelyzer": "~4.1.0",
    "husky": "^0.14.3",
    "jasmine-core": "~2.99.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-spec-reporter": "^0.0.32",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "protractor": "^5.2.2",
    "ts-node": "^4.0.2",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3"
  }
}
